<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:statusBarBackground="@color/colorTranslucentWhite"
    tools:context=".fragment.PlaylistFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/Widget.Newbie.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="@style/Widget.Newbie.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorTranslucentWhite"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@color/colorTranslucentWhite">

            <ImageView
                android:id="@+id/blurimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="center"
                android:src="@drawable/img_tiles_bg"
                app:layout_collapseMode="parallax" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="147dp"
                android:layout_height="147dp"
                android:layout_gravity="center_vertical|center_horizontal"
                app:cardElevation="4dp"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_tiles_bg" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/TextAppearance.Newbie.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:buttonGravity="bottom"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_chevron_left_black_24dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Cardi B"
                app:titleTextAppearance="@style/TextAppearance.Newbie.Toolbar" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistFragmentPlaylistRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/nb_list_item_media_small_tiles" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>